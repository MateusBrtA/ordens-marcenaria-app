{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m pip install -r ordens-marcenaria-backend/requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT ordens-marcenaria-backend.src.main:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}