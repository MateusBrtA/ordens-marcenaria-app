{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "rootDirectory": "ordens-marcenaria-backend"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT \"src:create_app()\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}